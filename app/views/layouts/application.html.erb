<!DOCTYPE html>
<html>
<head>
  <title>Twatter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="top-menu">
  <img src="https://api.nasa.gov/images/logo.png" alt="">
  <h1>Soul Eater</h1>
<% if @current_user %>
  <div id="user-button">
    <h4>Welcome, <%= @current_user.name %></h4>
    <button><a href="/logout">Run away</a></button>
  </div>
    <% end %>
</div>
<%= yield %>

</body>
</html>
